	<Script file="Accountant.lua"/>
	<Script file="PurchasesDB.lua"/>

	<Frame name="AccountantFrame" hidden="true">
		<Scripts>
			<OnLoad>
				Accountant_OnLoad();
				this:RegisterEvent("ADDON_LOADED");
			</OnLoad>
			<OnEvent>
				if (event == "ADDON_LOADED" and string.lower(arg1) == "accountant") then
					Accountant_AddOnLoaded();
					this:UnregisterEvent("ADDON_LOADED");
				else
					Accountant_OnEvent(event);
				end
			</OnEvent>
		</Scripts>
	</Frame>
