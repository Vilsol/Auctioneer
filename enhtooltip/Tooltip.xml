	<Frame name="EnhancedTooltipMoneyTemplate" frameStrata="TOOLTIP" hidden="true" virtual="true">
		<Frames>
			<Frame name="$parent" inherits="TinyMoneyFrameTemplate" hidden="true">
				<Scripts>
					<OnLoad>
						SmallMoneyFrame_OnLoad();
						MoneyFrame_SetType("STATIC");
					</OnLoad>
				</Scripts>
			</Frame>
		</Frames>
	</Frame>

	<Frame name="EnhancedTooltipTemplate" frameStrata="TOOLTIP" hidden="true" virtual="true">
		<Backdrop name="$parentBackdrop" bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>
		<Layers>
			<Layer level="INFO">
				<Texture name="$parentIcon" file="Interface\Buttons\UI-Quickslot2" hidden="true">
					<Size>
					  <AbsDimension x="32" y="32"/>
					</Size>
					<Anchors>
						<Anchor point="TOPRIGHT">
							<Offset>
								<AbsDimension x="-7" y="-7"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>

				<FontString name="$parentText1" inherits="GameFontNormal" hidden="true">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="10" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="EnhancedTooltip" inherits="EnhancedTooltipTemplate" parent="UIParent" hidden="true"/>
	<!-- ToDo: Change this to be dinamically populated -->

	<Frame name="EnhancedUpdate" parent="UIParent" hidden="false">
		<Scripts>
			<OnLoad>
				EnhTooltip.OnLoad()
			</OnLoad>
			<OnUpdate>
				EnhTooltip.SetElapsed(elapsed);
			</OnUpdate>
		</Scripts>
	</Frame>
</Ui>
