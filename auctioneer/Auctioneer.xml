	<CheckBox name="AuctFilterTemplate" inherits="OptionsCheckButtonTemplate" hidden="true" virtual="true">
		<Scripts>
			<OnLoad>
				function SetFilter(filter)
					this.filterVal = filter;
					this:SetChecked(Auctioneer_GetFilter(filter));
				end
			<OnClick>
				if (this.filterVal) then
					if (this:GetChecked()) then
						Auctioneer_SetFilter(this.filterVal, "on");
					else
						Auctioneer_SetFilter(this.filterVal, "off");
					end
				end
			</OnClick>
		</Scripts>
	</CheckButton>
